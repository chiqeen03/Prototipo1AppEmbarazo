<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="350dp"
                                             android:layout_height="wrap_content"
                                             android:background="@color/grey"
                                             android:padding="5dp"
                                             android:layout_gravity="center">

    <TextView
            android:text="Proteínas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tituloProteinas" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            android:textSize="24sp" app:layout_constraintHorizontal_bias="0.501"
            android:gravity="center"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:id="@+id/linearLayout" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/proteText">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/carneRojaText"
                android:textSize="18sp"
                android:gravity="center" tools:layout_editor_absoluteY="140dp" tools:layout_editor_absoluteX="155dp"
                android:text="Carne Roja"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pescadoText"
                android:textSize="18sp"
                android:gravity="center" tools:layout_editor_absoluteY="201dp" tools:layout_editor_absoluteX="105dp"
                android:text="Pescado"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lacteosText"
                android:textSize="18sp"
                android:gravity="center" tools:layout_editor_absoluteY="260dp" tools:layout_editor_absoluteX="122dp"
                android:text="Lácteos"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/embutidosText"
                android:textSize="18sp"
                android:gravity="center" tools:layout_editor_absoluteY="323dp" tools:layout_editor_absoluteX="138dp"
                android:text="Embutidos"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/otrosText"
                android:textSize="18sp"
                android:gravity="center" tools:layout_editor_absoluteY="323dp" tools:layout_editor_absoluteX="138dp"
                android:text="Otros"/>
    </LinearLayout>
    <Button
            android:text="Cerrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/closeButtonProteinas" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="42dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/custom_button"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>
    <TextView
            android:text="El 10- 20% de las calorías que ingieres deben provenir de proteínas. Tu requerimiento de proteína aumenta ya que es necesaria para la formación de tejidos del bebé."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/proteText"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/tituloProteinas"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:gravity="center"/>
</android.support.constraint.ConstraintLayout>