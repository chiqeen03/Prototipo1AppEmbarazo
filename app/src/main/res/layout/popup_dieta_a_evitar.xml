                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="350dp"
                                             android:layout_height="wrap_content"
                                             android:background="@color/grey"
                                             android:padding="5dp"
                                             android:layout_gravity="center">

    <TextView
