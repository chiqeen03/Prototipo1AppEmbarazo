                android:layout_marginStart="16dp"
                android:textSize="24sp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/carbohidratosButton"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="184dp"
                app:layout_constraintTop_toBottomOf="@+id/Dieta_txtView"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/grasasButton"/>
        <Button
                android:text="Grasas"
                android:layout_width="179dp"
                android:layout_height="121dp" android:id="@+id/grasasButton"
