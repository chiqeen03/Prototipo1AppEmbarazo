                android:text="A Evitar"
                android:layout_width="179dp"
                android:layout_height="121dp" android:id="@+id/evitarButton"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/custom_button4"
                android:layout_marginBottom="236dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="24sp" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
