<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".Fragments.FragmentDieta">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Dietas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Dieta_txtView"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="30sp" android:textAlignment="center"/>
        <Button
                android:text="Hidratos de Carbono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/carbohidratosButton"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/Dieta_txtView" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:textColor="#FFFFFF"
                android:background="@drawable/custom_button"
                android:layout_marginStart="8dp"/>
        <Button
                android:text="ProteÃ­nas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/proteinasButton"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/carbohidratosButton" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:textColor="#FFFFFF"
                android:background="@drawable/custom_button2"
                android:layout_marginStart="8dp"/>
        <Button
                android:text="Grasas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/grasasButton"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/proteinasButton" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:textColor="#FFFFFF"
                android:background="@drawable/custom_button3"
                android:layout_marginStart="8dp"/>
        <Button
                android:text="A Evitar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/evitarButton"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/grasasButton" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:textColor="#FFFFFF"
                android:background="@drawable/custom_button4"
                android:layout_marginStart="8dp"/>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>