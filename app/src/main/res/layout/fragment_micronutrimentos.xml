                android:layout_marginEnd="8dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/custom_button4"
                app:layout_constraintHorizontal_bias="0.509" android:layout_marginTop="16dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/zincButton"/>
        <Button
                android:text="Zinc"
                android:layout_width="291dp"
                android:layout_height="wrap_content"
                android:id="@+id/zincButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/custom_button"
                android:textStyle="bold"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/vitaminaAButton"/>

    </android.support.constraint.ConstraintLayout>
</FrameLayout>