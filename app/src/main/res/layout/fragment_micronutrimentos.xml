                android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/custom_button5"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/hierroButton"/>
        <Button
                android:text="Vitamina A"
                android:layout_width="297dp"
                android:layout_height="wrap_content"
                android:id="@+id/vitaminaAButton" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/custom_button3"
